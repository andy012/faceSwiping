		<!-- Testing -->
		<h2.version>1.3.172</h2.version>
		<junit.version>4.9</junit.version>
		<mockito.version>1.9.5</mockito.version>
		<powermockito.version>1.5.1</powermockito.version>
		
		<!-- Java Doc -->
		<java.doc.version>2.9.1</java.doc.version>
	</properties>
	
